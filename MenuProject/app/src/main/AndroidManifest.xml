<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.acadgild.menuproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".OptionMenuActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ContextMenu"
            android:label="@string/title_activity_context_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PopupMenuActivity"
            android:label="@string/title_activity_popup_menu"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
